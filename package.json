{
	"name": "app",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "bun --bun run dev",
    	"build": "bun --bun run build",
    	"start": "bun ./build/index.js",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
