	"devDependencies": {
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.50.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"svelte": "^5.48.2",
		"svelte-adapter-bun": "^1.0.1",
		"svelte-check": "^4.3.5",
		"typescript": "^5.9.3",
		"vite": "^7.3.1"
	},
	"dependencies": {
		"@tailwindcss/vite": "^4.1.18",
		"tailwindcss": "^4.1.18"
	}
}
